{% extends 'base.html.twig' %}

{% block title %}Liste des produits{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Liste des produits</h1>

        <div class="row">
            {% for product in products %}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ product.name }}</h5>
                            <p class="card-text">prix : {{ product.price }} €</p>

                            {% if product.qrCode %}
                                <div class="text-center mb-3">
                                    <img src="{{ product.qrCode }}" class="img-fluid" style="max-width: 150px;">
                                </div>
                            {% endif %}

                            <div class="justify-content-center align-items-center text-center">
                                <a href="{{ path('product_show', {'id': product.id}) }}" class="btn btn-primary">Voir</a>
                                <a href="{{ path('product_delete', {'id': product.id}) }}" class="btn btn-danger">Suppr</a>
                                <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-warning">Edit</a>
                                <a href="{{ path('app_pdf_generator', {'id': product.id}) }}" class="btn btn btn-secondary">PDF</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <p>Aucun produit trouvé.</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
