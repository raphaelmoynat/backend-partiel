{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
    <div class="container mt-5">


        <div class="row">
            <div class="col-md-6">
                <h1>{{ product.name }}</h1>
                <p class="lead">Prix: {{ product.price }} â‚¬</p>
                <p>ID du produit: {{ product.id }}</p>

                <a href="{{ path('product_list') }}" class="btn btn-primary mt-5">Retour</a>
            </div>


            <div class="col-md-6 text-center">
                {% if product.qrCode %}
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">QR Code</h5>
                            <img src="{{ product.qrCode }}" alt="QR Code pour {{ product.name }}" class="img-fluid" style="max-width: 250px;">
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
